@inject MudDialogInstance MudDialog

<MudDialogContent>
    <!-- conteúdo do formulário -->
</MudDialogContent>

<MudDialogActions>
    <MudButton OnClick="Salvar">Salvar</MudButton>
    <MudButton OnClick="Cancelar">Cancelar</MudButton>
</MudDialogActions>

@code {
    void Cancelar() => MudDialog.Cancel();

    void Salvar() => MudDialog.Close(DialogResult.Ok(true));
}
